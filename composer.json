{
    "name": "pascaldevink/phpcommons",
    "description": "Object wrappers around common used PHP functions.",
    "type": "library",
    "keywords": ["php", "commons"],
    "homepage": "https://github.com/pascaldevink/php-commons",
    "license": "MIT",

    "authors": [
        {
            "name": "Pascal de Vink",
            "email": "pascal.de.vink@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": {
            "PHPCommons\\Exception\\": "src/PHPCommons/Exception",
            "PHPCommons\\Lang\\": "src/PHPCommons/Lang"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "PHPCommons\\Lang\\": "tests/PHPCommons/Lang"
        }
    },

    "minimum-stability": "stable",

    "require": {
        "php":  ">=5.4",
        "ext-mbstring": "*"
    },

    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "php-coveralls/php-coveralls": "dev-master || ^1.0"
    }
}
